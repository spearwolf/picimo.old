{
  "name": "picimo",
  "version": "0.0.23",
  "author": {
    "name": "Wolfger Schramm",
    "email": "wolfger@spearwolf.de",
    "url": "https://github.com/spearwolf"
  },
  "keywords": [
    "javascript",
    "webgl",
    "canvas",
    "2d",
    "3d",
    "sprites"
  ],
  "scripts": {
    "build:dbg": "rollup --environment TARGET:chrome-firefox,DEBUG,SOURCE_MAP:true,OUTFILE:dist/picimo-dbg.umd.js -c config/rollup.build.js",
    "build:min": "rollup --environment TARGET:universal,UGLIFY,SOURCE_MAP:true,OUTFILE:dist/picimo-min.umd.js -c config/rollup.build.js",
    "build:cjs": "rollup --environment TARGET:universal,FORMAT:cjs,OUTFILE:dist/picimo.js -c config/rollup.build.js",
    "build:ios": "rollup --environment TARGET:ios,OUTFILE:dist/picimo-ios.umd.js -c config/rollup.build.js",
    "build:test": "rollup --environment TARGET:chrome-firefox,OUTFILE:dist/picimo-chrome-firefox.umd.js -c config/rollup.build.js",
    "build:es6": "rollup --environment FORMAT:es,OUTFILE:dist/picimo.es6.js -c config/rollup.build.js",
    "build": "run-p build:*",
    "clean": "rm -fr dist/*.js dist/esdoc",
    "esdoc": "esdoc -c config/esdoc.json",
    "karma": "karma start config/karma.conf.js",
    "test": "run-s build:test karma"
  },
  "main": "dist/picimo.js",
  "jsnext:main": "dist/picimo.es6.js",
  "module": "dist/picimo.es6.js",
  "license": "Apache-2.0",
  "devDependencies": {
    "babel-preset-env": "0.0.9",
    "babel-preset-es2015-rollup": "^3.0.0",
    "buble": "^0.14.3",
    "esdoc": "^0.4.8",
    "jasmine": "^2.5.2",
    "karma": "^1.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-jasmine": "^1.1.0",
    "karma-rollup-plugin": "^0.2.4",
    "npm-run-all": "^3.1.2",
    "rollup": "^0.36.4",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-buble": "^0.14.0",
    "rollup-plugin-commonjs": "^5.0.5",
    "rollup-plugin-json": "^2.0.2",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-uglify": "^1.0.1"
  },
  "dependencies": {
    "@spearwolf/eventize": "github:spearwolf/eventize",
    "color-js": "^1.0.3",
    "gl-matrix": "^2.3.2",
    "lodash": "^4.17.2"
  }
}
