{
  "name": "picimo",
  "version": "0.0.26",
  "author": {
    "name": "Wolfger Schramm",
    "email": "wolfger@spearwolf.de",
    "url": "https://github.com/spearwolf"
  },
  "keywords": [
    "javascript",
    "webgl",
    "canvas",
    "2d",
    "3d",
    "sprites",
    "sprite-engine"
  ],
  "scripts": {
    "build:dbg": "rollup --environment TARGET:chrome-firefox,DEBUG,SOURCE_MAP:true,OUTFILE:dist/picimo-dbg.umd.js -c config/rollup.build.js",
    "build:min": "rollup --environment TARGET:universal,UGLIFY,SOURCE_MAP:true,OUTFILE:dist/picimo-min.umd.js -c config/rollup.build.js",
    "build:cjs": "rollup --environment TARGET:universal,FORMAT:cjs,OUTFILE:dist/picimo.js -c config/rollup.build.js",
    "build:ios": "rollup --environment TARGET:ios,OUTFILE:dist/picimo-ios.umd.js -c config/rollup.build.js",
    "build:test": "rollup --environment TARGET:chrome-firefox,OUTFILE:dist/picimo-chrome-firefox.umd.js -c config/rollup.build.js",
    "build:es6": "rollup --environment FORMAT:es,OUTFILE:dist/picimo.es6.js -c config/rollup.build.js",
    "build": "run-p build:*",
    "clean": "rm -fr dist/*.js dist/esdoc",
    "esdoc": "rm -fr dist/esdoc && esdoc -c config/esdoc.json",
    "apidocs": "documentation build src/** -f html -o dist/apidocs",
    "apidocs:serve": "documentation serve src/**",
    "backstop": "backstop test",
    "backstop:reference": "backstop reference",
    "karma": "karma start config/karma.conf.js",
    "mocha": "mocha --compilers js:babel-core/register test/unit/test_*.js",
    "test:unit": "npm run mocha",
    "test:functional": "run-s build:test karma",
    "test:regression": "npm run backstop",
    "test": "run-s test:unit test:functional",
    "start": "lite-server"
  },
  "main": "dist/picimo.js",
  "jsnext:main": "dist/picimo.es6.js",
  "module": "dist/picimo.es6.js",
  "license": "Apache-2.0",
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-core": "^6.22.1",
    "babel-preset-env": "^1.1.8",
    "babel-preset-es2015-rollup": "^3.0.0",
    "backstopjs": "^2.3.7",
    "buble": "^0.15.2",
    "chai": "^3.5.0",
    "documentation": "^4.0.0-beta.18",
    "esdoc": "^0.5.2",
    "jasmine": "^2.5.3",
    "karma": "^1.4.1",
    "karma-chrome-launcher": "^2.0.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-jasmine": "^1.1.0",
    "karma-rollup-plugin": "^0.2.4",
    "lite-server": "^2.2.2",
    "mocha": "^3.2.0",
    "npm-run-all": "^4.0.1",
    "rollup": "^0.41.4",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^7.0.0",
    "rollup-plugin-json": "^2.1.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-uglify": "^1.0.1",
    "slimerjs": "^0.10.2"
  },
  "dependencies": {
    "@spearwolf/eventize": "github:spearwolf/eventize",
    "@spearwolf/jab": "github:spearwolf/jab",
    "color-js": "^1.0.4",
    "gl-matrix": "^2.3.2",
    "lodash": "^4.17.4"
  }
}
