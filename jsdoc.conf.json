{
	"tags": {
		"allowUnknownTags" : true,
        "dictionaries"     : [ "jsdoc", "closure" ]
	},

	"plugins": [ "plugins/markdown" ],

    "source": {
        "includePattern": ".+\\.js(doc)?$",
        "excludePattern": "3rdparty|gun.js"
    },

	"templates": {
		"cleverLinks"           : true,
		"monospaceLinks"        : false,
        "private"               : false,
		"dateFormat"            : "ddd MMM Do YYYY",
		"outputSourceFiles"     : false,
		"outputSourcePath"      : false,
		"systemName"            : "Picimo",
		"footer"                : "",
		"copyright"             : "Picimo Copyright Â© 2014-2015 by Wolfger Schramm <wolfger@spearwolf.de>",
		"navType"               : "vertical",
		"linenums"              : false,
		"collapseSymbols"       : false,
		"inverseNav"            : false,
		"highlightTutorialCode" : true,
		"protocol": "fred://"
	},

	"markdown": {
		"parser"   : "gfm",
		"hardwrap" : true
	}
}
